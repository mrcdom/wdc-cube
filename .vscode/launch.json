    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/node_modules/react-scripts/bin/react-scripts.js",
                "test",
                "--runInBand",
                "--no-cache",
                "--env=jsdom"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "CI": "true"
            },
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
        }
    ]
}